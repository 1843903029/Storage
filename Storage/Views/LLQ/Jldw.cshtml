                </tr>
            </thead>
            <tbody id="tb1"></tbody>
        </table>
        <div hidden id="yyyyy" style="margin-left:500px;">
            <table class="formtab_user">
                <tbody>
                    <tr>
                        <td>编号</td>
                        <td>
                            <input id="txtJlid" name="txtJlid" type="text" placeholder="自动生成,可不填" class="input-medium" disabled="disabled" value="">
                        </td>
                    </tr>
                    <tr>
                        <td>名称</td>
                        <td>
                            <input id="txtJlName" name="txtJlName" type="text" placeholder="请输入计量单位名称" class="input-medium" value="">
                        </td>
                    </tr>
                    <tr>
                        <td><input id="Button1" type="button" style="margin-left:0px" value="确认" /></td>
                        <td><input id="Button1_1" type="button" style="margin-left:10px" value="取消" /></td>
                    </tr>


            </table>
        </div>
    </div>
</body>
</html>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script>
    var pageIndex = 1;
    var pageSize = 10;
    var rowss = 0;
    var state = 2;
    $(function () {
        Jldws();

        $("#btnSubhh").click(function () {
            if ($("#yyyyy").css("display") == "none") {
                $("#yyyyy").show();

            } else {
                $("#yyyyy").hide();
            }
        });
        $("#Button1_1").click(function () {
            $("#yyyyy").hide();
        });
        $("#btnHSearch").click(function () {
            if ($(".widget").css("display") == "none") {
                $(".widget").show();

            } else {
                $(".widget").hide();
            }
        })

        rukuList(state);
        layui.use(['laypage', 'layer'], function () {
            var laypage = layui.laypage
                , layer = layui.layer;
            //完整功能
            laypage.render({
                elem: 'pageDome'
                , count: rowss
                , limit: 3
                , layout: ['count', 'prev', 'page', 'next', 'limit', 'refresh', 'skip']
                , jump: function (obj) {
                    pageIndex = obj.curr;
                    pageSize = obj.limit;
                    rukuList(state);
                }
            });
        });
    })


    function Jldws() {

        $.ajax({
            type: "POST",
            url: "/LLQ/Jldws",
            data: "{PageIndex:" + pageIndex + ",pageSize:" + pageSize + ",jldw:{Jlbh:'" + $("#txtSearch").val()+"'}}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                $("#tb1 tr").remove();
                //获取总条数
                rows = result.PageCount;
                $.each(result.DataList, function (index, data) {
                    $("#tb1").append("<tr><td>" + data.Jlid + "</td><td>" + data.Jlbh + "</td><td>" + data.JlName + "</td><td>" + data.JlName + "</td><td>操作</td></tr>");
                });
            },
            error: function (ex) {
                alert("Error:" + ex.responseText);
            }
        });
    }

</script>


