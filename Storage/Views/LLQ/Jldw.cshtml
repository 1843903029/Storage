<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Jldw</title>
    <link href="~/Css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/layui/css/layui.css" rel="stylesheet" />
</head>
<body>
    <div style="border:0px solid #4cff00;width:95%;">
        <div style="padding:15px;border:1px solid red">
            <table>
                <tr>
                    <td><a href="#">首页<</a></td>
                    <td>基本资料<</td>
                    <td>计量单位</td>
                </tr>
            </table>
            <table>
                <tr>
                    <td><strong style="margin-left:20px">计量单位</strong></td>
                    <td> <input style="margin-left:750px;" id="btnSubhh" class="btn btn-primary" type="button" value="新增" /></td>
                    <td> <input style="margin-left:10px;" id="btnSub" class="btn btn-danger" type="button" value="删除" /></td>
                    <td> <input style="margin-left:10px;" id="btnSub" class="btn btn-info" type="button" value="导出" /></td>
                </tr>
            </table>
            <table action="javascript:void(0)" class="form-horizontal">
                <tr>
                    <td><input id="txtSearch" type="text" class="input-group" placeholder="请输入单位编名或者名称"></td>
                    <td>
                        <a style="margin-left:10px" id="gritter-remove-all" class="btn btn-info" href="javascript:void(0)" onclick="User.PageClick(1)">搜索</a>
                    </td>
                </tr>
            </table>
            <div class="jbox-button-panel" style="height:25px;padding:5px 0 5px 0;text-align: right;"><span class="jbox-bottom-text" style="float:left;display:block;line-height:25px;"></span><button class="jbox-button jbox-button-focus" value="true" style="padding:0px 10px 0px 10px;">确定</button><button class="jbox-button" value="false" style="padding:0px 10px 0px 10px;">关闭</button></div>
            <table style="width:100%;" class="table table-bordered">
                <thead>
                    <tr>
                        <td style="width:20px;"><input type="checkbox" /></td>
                        <td class="hidden-480">序号</td>
                        <td class="hidden-480">编号</td>
                        <td class="hidden-480">名称</td>
                        <td>操作</td>
                    </tr>
                </thead>
                <tbody id="tb1"></tbody>
            </table>
            <div id="jbox-content" style="height: 136px;  position: static; margin-left:500px" hidden>
                <div class="tab-pane active" id="widget_tab1">
                    <table class="formtab_user">
                            <tr>
                                <td>编号</td>
                                <td>
                                    <input id="txtJlid" name="txtJlid" type="text" placeholder="自动生成,可不填" class="input-medium" disabled="disabled" value="">
                                </td>
                            </tr>
                            <tr>
                                <td>名称</td>
                                <td>
                                    <input id="txtJlName" name="txtJlName" type="text" placeholder="请输入计量单位名称" class="input-medium" value="">
                                </td>
                            </tr>
                            <tr>
                                <td><input id="Button1" type="button" style="margin-left:0px" value="确认" /></td>
                                <td><input id="Button1_1" type="button" style="margin-left:10px" value="取消" /></td>
                            </tr>
                    </table>
                </div>
            </div>
            @*分页*@
            <div id="pageDemo">

            </div>
        </div>
    </div>
</body>
</html>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script>
    var pageIndex = 1;
    var pageSize = 6;
    var rowss = 0;
    var state = 2;
    $(function () {
        GetJldwAll();

        layui.use(['laypage', 'layer'], function () {
            var laypage = layui.laypage
                , layer = layui.layer;
            //完整功能
            laypage.render({
                elem: 'pageDome'
                , count: rowss
                , limit: 3
                , layout: ['count', 'prev', 'page', 'next', 'limit', 'refresh', 'skip']
                , jump: function (obj) {
                    pageIndex = obj.curr;
                    pageSize = obj.limit;
                    rukuList(state);
                }
            });
        });
    })

    function GetJldwAll() {

        $.ajax({
            type: "POST",
            url: "/LLQ/GetJldwAll",
            data: "{PageIndex:" + pageIndex + ",pageSize:" + pageSize + "}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                $("#tb1 tr").remove();
                //获取总条数
                rows = result.PageCount;
                $.each(result.DataList, function (index, data) {
                    $("#tb1").append("<tr><td style='width: 20px; '><input type='checkbox' /></td><td>" + data.Jlid + "</td><td>" + data.Jlbh + "</td><td>" + data.JlName + "</td><td><i class='layui-icon layui-icon-edit' title='编辑'></i> <i class='layui-icon layui-icon-file-b' title='详情'></i><i class='layui-icon layui-icon-delete' title='删除'></i></td></tr>");
                });
            },
            error: function (ex) {
                alert("Error:" + ex.responseText);
            }
        });
    }


    $("#btnSubhh").click(function () {
        if ($("#yyyyy").css("display") == "none") {
            $("#yyyyy").show();
        } else {
            $("#yyyyy").hide();
        }
    });
    $("#Button1_1").click(function () {
        $("#yyyyy").hide();
    });
    $("#btnHSearch").click(function () {
        if ($(".widget").css("display") == "none") {
            $(".widget").show();

        } else {
            $(".widget").hide();
        }
    })


    function ConvertDate(date) {
        var time = new Date(parseInt(date.substr(6)));
        return time.toLocaleDateString();
    }
</script>


