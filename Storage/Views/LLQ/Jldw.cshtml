<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script>

    $(function () {
        GetJldwAll();

        var pageIndex = 1;
        var pageSize = 6;
        var PageCount = 0;
        var rows = 0;

        layui.use(['laypage', 'layer'], function () {
            var laypage = layui.laypage
                , layer = layui.layer;
            //完整功能
            laypage.render({
                elem: 'pageDemo'
                , count: rows//总条数
                , limit: 2//每页显示数
                , layout: ['count', 'prev', 'page', 'next', 'limit', 'refresh', 'skip']
                , jump: function (obj) {

                    //设置当前页
                    PageIndex = obj.curr;
                    //设置每页显示
                    PageSize = obj.limit;
                    GetJldwAll();
                }
            });
        });


        function GetJldwAll() {

            $.ajax({
                type: "POST",
                url: "/LLQ/GetJldwAll",
                data: "{PageIndex:" + pageIndex + ",pageSize:" + pageSize + "}",
                dataType: "json",
                contentType: "application/json",
                success: function (result) {
                    $("#tb1 tr").remove();
                    //获取总条数
                    rows = result.PageCount;
                    $.each(result.DataList, function (index, data) {
                        $("#tb1").append("<tr><td><input type='checkbox' /></td><td>" + data.Jlid + "</td><td>" + data.JlName + "</td><td><i class='layui-icon layui-icon-edit' title='编辑'></i> <i class='layui-icon layui-icon-file-b' title='详情'></i><i class='layui-icon layui-icon-delete'id='dit' title='删除'></i></td></tr>");
                    });
                },
                error: function (ex) {
                    alert("Error:" + ex.responseText);
                }
            });
        }


        $("#btnSubhh").click(function () {
            if ($("#jbox-content").css("display") == "none") {
                $("#jbox-content").show();

            } else {
                $("#jbox-content").hide();
            }
        });
        $("#Button1_1").click(function () {
            $("#jbox-content").hide();
        });
    });

    function JldwAdd() {
        $.ajax({
            type: "POST",
            url: "/LLQ/JldwAdd",
            data: "{jldw:{Jlid:'" + $("#txtJlid").val() + "',JlName:'" + $("#txtJlName").val() + "}}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                if (result > 0) {
                    alert("新增成功");
                    GetJldwAll();
                }
            },
            error: function (ex) {
                alert("Error:" + ex.responseText);
            }
        });
    }

    function JldwDet() {
        var id = $("[name='txtJlid']").val();
        $.ajax({
            //请求方式
            type: "POST",
            //发送请求的地址 /控制器名/动作方法名
            url: "/LLQ/JldwDet",
            //发送到服务器的数据(方法参数)
            data: "{jldw:" + id + "}",
            //服务器返回的数据类型
            dataType: "json",
            //发送信息至服务器时内容编码类型
            contentType: "application/json",
            //请求成功后的回调函数
            success: function (result) {
                if (result > 0) {
                    alert("删除成功");
                    GetJldwAll();
                }
                else {
                    alert("删除失败");
                }
            },
            //请求失败后的回调函数
            error: function (ex) {
                alert(ex.responseText);
            }
        });
    };

    function reads() {
        layer.open({
            type: 1,
            skin: 'layui-layer-demo',//样式类名
            title: ['编辑', 'font-size:18px'],
            area: ['400px', '359px'],
            shadeClose: true,
            content: $('#jbox-content1').html(),
            btn: ['确定', '取消'],
            yes: function () {

            },
        });

    }

    function JldwGetById(Jlid) {
        $.ajax({
            type: "POST",
            url: "/LLQ/JldwGetById",
            data: "{Jlid:" + Jlid + "}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                $.each(result, function (Index, data) {
                    $("[name='txtJlName']").val(data.JlName);
                });
            },
            error: function (ex) {
                alert(ex.responseText);
            }
        });
    }






    function ConvertDate(date) {
        var time = new Date(parseInt(date.substr(6)));
        return time.toLocaleDateString();
    }
</script>


