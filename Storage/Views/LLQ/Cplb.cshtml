
@{
    ViewBag.Title = "Cplb";
    Layout = "~/Views/MainPage.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cplb</title>
    <link href="~/Css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/layui/css/layui.css" rel="stylesheet" />
</head>
<body>
    <div style="border:0px solid #4cff00;width:100%;">
        <div style="padding:15px;border:1px solid red">
            <table>
                <tr>
                    <td><a href="#">首页<</a></td>
                    <td>基本资料<</td>
                    <td>产品类别</td>
                </tr>
            </table>
            <table>
                <tr>
                    <td><strong style="margin-left:20px">产品类别管理</strong></td>
                    <td> <input style="margin-left:750px;" id="btnSubhh" class="btn btn-primary" type="button" value="新增" /></td>
                    <td> <input style="margin-left:10px;" id="btnSub" class="btn btn-danger" type="button" value="删除" /></td>
                    <td> <input style="margin-left:10px;" id="btnSub" class="btn btn-info" type="button" value="导出" /></td>
                </tr>
            </table>

            <table action="javascript:void(0)" class="form-horizontal">
                <tr>
                    <td><input id="txtSearch" type="text" class="input-group" placeholder="请输入类别编号或者名称"></td>
                    <td>
                        <a style="margin-left:10px" id="gritter-remove-all" class="btn btn-info" href="javascript:void(0)" onclick="User.PageClick(1)">搜索</a>
                    </td>
                </tr>
            </table>
            <table style="width:100%;" class="table table-bordered">
                <thead>
                    <tr>
                        <td style="width:20px;"><input type="checkbox" /></td>
                        <td>类别编号</td>
                        <td>类别名称</td>
                        <td>创建人</td>
                        <td>创建时间</td>
                        <td>备注</td>
                        <td>操作</td>
                    </tr>
                </thead>
                <tbody id="tb1">

                </tbody>
            </table>
            <div id="jbox-content" style="height: 136px;  position: static; background-color:aliceblue" hidden>
                <div class="tab-pane active" id="widget_tab1" style="margin-top:30px">
                    <table class="formtab_user">
                        <tbody>
                            <tr>
                                <td>类别编号</td>
                                <td>
                                    <input id="txtCpId" name="txtCpId" type="text" placeholder="自动生成,可不填" class="input-medium" disabled="disabled">
                                </td>
                            </tr>
                            <tr>
                                <td>类别名称</td>
                                <td>
                                    <input id="txtCpLbName" name="txtCpLbName" type="text" class="input-medium">
                                </td>
                            </tr>
                            <tr>
                                <td>备注</td>
                                <td>
                                    <input id="txtremark" name="txtremark" type="text" class="input-medium">
                                </td>
                            </tr>
                        </tbody>
                        <tr>
                            <td><input id="Button1" type="button" class="btn-success" style="margin-left:50px;margin-top:15px" onclick="CplbAdd()" value="确认" /></td>
                            <td><input id="Button1_1" type="button" class="btn-info" style="margin-left:50px;margin-top:15px" value="取消" /></td>
                        </tr>
                    </table>
                </div>
            </div>
            @*分页*@
            <div id="pageDemo">

            </div>
        </div>
    </div>
</body>
</html>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/layui/layui.js"></script>
<script>
    $(function () {

        GetCplbAll();

        var PageIndex = 1;
        var PageSize = 6;
        var PageCount = 0;
        var rows = 0;
        layui.use(['laypage', 'layer'], function () {
            var laypage = layui.laypage
                , layer = layui.layer;
            //完整功能
            laypage.render({
                elem: 'pageDemo'
                , count: rows//总条数
                , limit: 2//每页显示数
                , layout: ['count', 'prev', 'page', 'next', 'limit', 'refresh', 'skip']
                , jump: function (obj) {

                    //设置当前页
                    PageIndex = obj.curr;
                    //设置每页显示
                    PageSize = obj.limit;
                    GetCplbAll();
                }
            });
        });
        function GetCplbAll() {
            $.ajax({
                type: "POST",
                url: "/LLQ/GetCplbAll",
                data: "{PageIndex:" + PageIndex + ",PageSize:" + PageSize + "}",
                dataType: "json",
                contentType: "application/json",
                success: function (result) {
                    $("#tb1 tr").remove();
                    rows = result.PageCount;
                    $.each(result.DataList, function (index, data) {
                        $("#tb1").append("<tr><td><input type='checkbox' /></td><td>" + data.ID + "</td><td>" + data.CpId + "</td><td>" + data.CpLbName + "</td><td>" + data.UserName + "</td><td>" + data.CpTime + "</td><td>" + data.remark + "</td><td><i class='layui-icon layui-icon-edit' title='编辑'></i> <i class='layui-icon layui-icon-file-b' title='详情'></i>   <i class='layui-icon layui-icon-delete' id='dit' title='删除'></i></td></tr>");
                    });
                },
                erro: function (ex) {
                    alert(ex.responseText);
                }
            })
        }
        
        $("#btnSubhh").click(function () {
            if ($("#jbox-content").css("display") == "none") {
                $("#jbox-content").show();

            } else {
                $("#jbox-content").hide();
            }
        });
        $("#Button1_1").click(function () {
            $("#jbox-content").hide();
        });
    });

    function CplbAdd() {
        $.ajax({
            type: "POST",
            url: "/LLQ/CplbAdd",
            data: "{cplb:{CpId:'" + $("#txtCpId").val() + "',CpLbName:'" + $("#txtCpLbName").val() + "',remark:'" + $("#txtremark").val() + "'}}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                if (result > 0) {
                    alert("新增成功");
                    GetCplbAll();
                }
            },
            error: function (ex) {
                alert("Error:" + ex.responseText);

            }
        });
    }

    function CplbDet() {
        var id = $("[name='txtCpId']").val();
        $.ajax({
            type: "POST",
            url: "/LLQ/CplbDet",
            data: "{cplb:" + id + "}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                if (result > 0) {
                    alert("删除成功");
                    GetCplbAll();
                }
                else {
                    alert("删除失败");
                }
            },
            error: function (ex) {
                alert("Error:" + ex.responseText);
            }
        });

    };

    function ConvertDate(date) {
        var time = new Date(parseInt(date.substr(6)));
        return time.toLocaleDateString();
    }
</script>
