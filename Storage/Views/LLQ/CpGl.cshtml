<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script>
    $(function () {
        GetCpGlAll();

        var PageIndex = 1;
        var PageSize = 6;
        var PageCount = 0;
        var rows = 0;
        layui.use(['laypage', 'layer'], function () {
            var laypage = layui.laypage
                , layer = layui.layer;
            //完整功能
            laypage.render({
                elem: 'pageDemo'
                , count: rows//总条数
                , limit: 2//每页显示数
                , layout: ['count', 'prev', 'page', 'next', 'limit', 'refresh', 'skip']
                , jump: function (obj) {

                    //设置当前页
                    PageIndex = obj.curr;
                    //设置每页显示
                    PageSize = obj.limit;
                    get();
                }
            });
        });
        function GetCpGlAll() {
            $.ajax({
                type: "POST",
                url: "/LLQ/GetCpGlAll",
                data: "{PageIndex:" + PageIndex + ",PageSize:" + PageSize + "}",
                dataType: "json",
                contentType: "application/json",
                success: function (result) {
                    $("#tb1 tr").remove();
                    rows = result.PageCount;
                    $.each(result.DataList, function (index, data) {
                        $("#tb1").append("<tr><td style='width: 20px; '><input type='checkbox' /></td><td>" + data.CpID + "</td><td>" + data.Cpbh + "</td><td>" + data.CpXsName + "</td><td>" + data.CpSx + "</td><td>" + data.CpXx + "</td><td>" + data.CpPrice + "</td><td>" + data.Specification + "</td><td>" + data.CpShuLiang + "</td><td>" + data.CpLbName + "</td><td>" + data.CpJlName + "</td><td>" + data.remark + "</td><td>删除</td></tr>");
                    });
                },
                erro: function (ex) {
                    alert(ex.responseText);
                }
            })
        }

        $("#btnSubhh").click(function () {
            if ($("#yyyyy").css("display") == "none") {
                $("#yyyyy").show();

            } else {
                $("#yyyyy").hide();
            }
        });
        $("#Button1_1").click(function () {
            $("#yyyyy").hide();
        });
        $("#btnHSearch").click(function () {
            if ($(".widget").css("display") == "none") {
                $(".widget").show();

            } else {
                $(".widget").hide();
            }
        })
    });
    
    function ConvertDate(date) {
        var time = new Date(parseInt(date.substr(6)));
        return time.toLocaleDateString();
    }
</script>
