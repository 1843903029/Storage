</html>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/layui/layui.js"></script>
<script>
    var Stuate = 1
    var PageIndex = 1;
    var PageSize = 10;
    var PageCount = 0;
    var rows = 0;
    $(function () {

        get(Stuate)
       
        layui.use(['laypage', 'layer'], function () {
            var laypage = layui.laypage
                , layer = layui.layer;

            //完整功能
            laypage.render({
                elem: 'pageDemo'
                , count: rows//总条数
                , limit: 3//每页显示数
                , layout: ['count', 'prev', 'page', 'next', 'limit', 'refresh', 'skip']
                , jump: function (obj) {

                    //设置当前页
                    PageIndex = obj.curr;
                    //设置每页显示
                    PageSize = obj.limit;
                    get(Stuate)
                }
            });
        });

        //$("#btnSubhh").click(function () {
        //    if ($("#yyyyy").css("display") == "none") {
        //        $("#yyyyy").show();

        //    } else {
        //        $("#yyyyy").hide();
        //    }
        //});
        $("#Button1_1").click(function () {
            $("#yyyyy").hide();
        });
        $("#btnHSearch").click(function () {
            if ($(".widget").css("display") == "none") {
                $(".widget").show();

            } else {
                $(".widget").hide();
            }
        })
    });
    function get(dss) {
        $.ajax({
            type: "POST",
            url: "/TXY/GetAllAdmin",
            data: "{PageIndex:" + PageIndex + ",PageSize:" + PageSize + ",Stuate:" + dss + "}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                $("#tb1 tr").remove();
                rows = result.PageCount;
                $.each(result.DataList, function (index, data) {
                    $("#tb1").append("<tr><td style='width: 20px; '><input type='checkbox' /></td><td id='hhh'>" + data.UserName + "</td ><td>" + data.UserCode + "</td ><td>" + data.RealName + "</td><td>" + data.Email + "</td><td>" + data.Phone + "</td><td>" + data.LoginCount + "</td><td>" + data.DepartNum + "</td><td>" + data.RoleNum + "</td><td><i  class='layui-icon layui-icon-delete' type='button' title='删除' onclick='btnSub(" + data.AdminID + ")'></i>&nbsp;&nbsp;&nbsp;<a href='#'><i  class='layui-icon layui-icon-edit'  type='button'  title='编辑'></i></a>&nbsp;&nbsp;&nbsp;<a href='#'><i href='#'  type='button' class='layui-icon layui-icon-console' title='权限分配'></i></a></td></tr>");

                    
                })
            },
            erro: function (ex) {
                alert(ex.responseText);
            }
        })
    }
    //删除
    function btnSub(AdminID) {
        alert(AdminID);
        $.ajax({
            type: "POST",
            url: "/TXY/SysAdmindelete",
            data: "{AdminID:'" + AdminID + "'}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                if (result > 0) {
                    alert("删除成功");
                    get(dss);
                }
                else {
                    alert("删除失败");

                }
            },
            error: function (ex) {
                alert("Error:" + ex.responseText);
            }

        });
        get(dss);
    };

    //新增


    function xzshow() {
        layer.open({
            type: 1,
            skin: 'layui-layer-demo',//样式类名
            title: ['新增用户', 'font-size:18px'],
            area: ['500px', '300px'],
            shadeClose: true,
            content: $('#yyyyy'),
            shade: 0,

        });


    }

    function add() {
        var UserCode = $("#txtUserCode").val();
        var name = $("#txtUserName").val()
        var aa = $("#textCreateTime").val();
        var IsDelete = true;
        $.ajax({
            type: "POST",
            url: "/TXY/SysAdminadd",
            data: "{admin:{UserName:" + name + ",UserCode:" + UserCode+ ",Password:'" + $("#txtPassword").val() + "',RealName:'" + $("#txtRealName").val() + "',Email:'" + $("#txtEmail").val() + "',Phone:'" + $("#txtPhone").val() + "',Mobile:'" + $("#txtMobile").val() + "',DepartNum:'" + $("#ddlDepart").val() + "',RoleNum:'" + $("#ddlRole").val() + "',CreateTime:'" + aa + "',IsDelete:'" + IsDelete + "'}}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                if (result > 0) {
                    alert("添加成功")
                    get(dss);
                    window.location.href = "/TXY/SysAdmin";
                }
            },
            error: function (ex) {
                alert("Error:" + ex.responseText);

            }
        });
        get(dss);
    }
</script>