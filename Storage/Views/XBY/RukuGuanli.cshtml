                        $(".rukzt").text("审核通过");
                    }
                    if (data.State == 0) {
                        $(".rukzt").text("审核失败");
                    }
                    $(".rukgysid").text(data.SupplierID);
                    $(".rukgysname").text(data.SupplierName);
                    $(".ruklianxiren").text(data.lianxiren);
                    $(".rukgldd").text(data.AssociatedNumber);
                    $(".rukcjr").text(data.EmployeeID);
                    $(".rukgltime").text(ConvertDate(data.CreationTime));
                    $(".rukdianhua").text(data.dianhua);
                    $(".rukbeizhu").text(data.StateText);
                    if (data.xiangbiao != null) {
                        $.each(data.xiangbiao, function (index, data1) {
                            console.log(data.xiangbiao);
                            $("#xiangtt2").append("<tr><td>" + data1.productName + "</td><td>" + data1.cptiaoma + "</td><td>" + data1.cpguige + "</td><td>" + data1.Batch + " </td><td>" + data1.Price + "</td><td>" + data1.StorageNumber + "</td><td>" + data1.Summoney + "</td><td>" + data1.kuweiname + "</td></tr>")
