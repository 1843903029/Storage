    //查询所有入库信息的ajax
    function SuoyouList() {
        $.ajax({
            type: "POST",
            url: "/XBY/SuoYouRuKuList",
            data: "{PageSize:" + pageSize + ",PageIndex:" + pageIndex + "}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                $("#tt tr").remove();
                rowss = result.PageCount;
                $.each(result.DataList, function (index, data) {
                    $("#tt").append("<tr><td><input type='checkbox' id='" + data.StorageID + "'/></td><td>" + data.StorageID + "</td><td>" + data.StorageType + "</td><td>" + data.SupplierID + "</td><td>" + data.AssociatedNumber + "</td><td>" + data.GoodsCount + "</td><td>" + data.Summoney + "</td><td>" + ZTString(data.State) + "</td><td>" + data.EmployeeID + "</td><td>" + data.OperationType + "</td><td>" + ConvertDate(data.CreationTime) + "</td><td><i class='layui-icon layui-icon-edit' title='编辑' id='bj" + data.StorageID + "'  onclick='XiuGaiYe(" + data.StorageID + ")'></i> <i class='layui-icon layui-icon-file-b' title='详情' onclick='show3(" + data.StorageID + ")'></i>   <i class='layui-icon layui-icon-delete' title='删除' onclick='ShanChuRuku(" + data.StorageID + ")'></i>  <i class='layui-icon layui-icon-vercode' title='审核' id='ck" + data.StorageID + "' onclick='shenheyemian(" + data.StorageID + ")' ></i>        </td></tr>");

                    if (data.State != 2) {
                        document.getElementById("ck" + data.StorageID + "").style.display = "none";
                        document.getElementById("bj" + data.StorageID + "").style.display = "none";
                    }

                });
            },
            error: function (ex) {
                alert("Error:" + ex.responseText);

            }
        });
    }

    function XiuGaiYe(danhao) {
        location.href = "/XBY/RukuGuanliXiuGai?id=" + danhao + "";
    }

