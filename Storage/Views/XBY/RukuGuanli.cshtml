                $.each(result, function (index, data) {
                    $(".rukdh").text(data.StorageID);
                    danh = data.StorageID;
                    $(".ruklx").text(data.StorageType);
                    if (data.State == 2) {
                        $(".rukzt").text("待审核");
                    }
