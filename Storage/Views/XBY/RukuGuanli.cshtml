                            obj.shcpid = data1.cpid;
                            obj.shcount = data1.StorageNumber;
                            console.log(obj)
                            cp.push(obj);
                        })
                    }

                });


            },
            error: function (ex) {
                alert(ex.responseText);
            }
        });
    }


    //审核入库单方法
    function RuKuShenHe(state) {
        $.ajax({
            type: "POST",
            url: "/XBY/RuKuShenHe",
            data: "{danhao:" + danh + ",state:" + state + "}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                if (result > 0) {
                    for (var i = 0; i < cp.length; i++) {
                        $.ajax({
                            type: "POST",
                            url: "/XBY/RuKuSHHou",
                            data: "{cpid:" + cp[i].shcpid + ",Count:" + cp[i].shcount + "}",
                            dataType: "json",
                            contentType: "application/json",
                            success: function (result) {

                            },
                            error: function (ex) {
                                alert("Error:" + ex.responseText);

                            }
                        });
                    }
                    alert("完成审核");
                    location.href = '/XBY/RukuGuanli';
                } else {
                    return;
                }

            },
            error: function (ex) {
                alert("Error:" + ex.responseText);

            }
        });
    }


    //跳转到新增入库单号
    function TiaoADD() {
        location.href = '/XBY/RukuGuanliAdd';
    }

    //查询所有入库信息的layui
    function Suoyou() {
        SuoyouList();
        layui.use(['laypage', 'layer'], function () {
            var laypage = layui.laypage
                , layer = layui.layer;

            //完整功能
            laypage.render({
                elem: 'pageDome'
                , count: rowss
                , limit: 10
                , layout: ['count', 'prev', 'page', 'next', 'limit', 'refresh', 'skip']
                , jump: function (obj) {
                    pageIndex = obj.curr;
                    pageSize = obj.limit;
                    SuoyouList();
                }
            });
        });
