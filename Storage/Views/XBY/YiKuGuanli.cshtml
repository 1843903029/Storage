        </table>
    </div>
    <div id="anniukuai" style="text-align:right;padding-right:30px;padding-top:50px">
        <button class="btn btn-default" id="shenhetg" onclick="YiKuShenHe(1)">审核通过</button>
        <button class="btn btn-default" id="shenhesb" onclick="YiKuShenHe(0)">审核失败</button>
        <button class="btn btn-default" id="tuichu">退出</button>
    </div>
</div>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/layui/layui.js"></script>

<script>
    var pageIndex = 1;
    var pageSize = 10;
    var rowss = 0;
    var state = 2;
    $(function () {
        rukuList(state);

        layui.use(['laypage', 'layer'], function () {
            var laypage = layui.laypage
                , layer = layui.layer;

            //完整功能
            laypage.render({
                elem: 'pageDome'
                , count: rowss
                , limit: 10
                , layout: ['count', 'prev', 'page', 'next', 'limit', 'refresh', 'skip']
                , jump: function (obj) {
                    pageIndex = obj.curr;
                    pageSize = obj.limit;
                    rukuList(state);
                }
            });
        });


        $("#daish").click(function () {
            rukuList(2);
        })
        $("#shenhetg").click(function () {
            rukuList(1);
        })
        $("#shenhesb").click(function () {
            rukuList(0);
        })

    })


    function show3(rid) {

        $("#xiangqingbiae tr").remove();
        layui.use('layer', function () { //独立版的layer无需执行这一句
            var $ = layui.jquery, layer = layui.layer; //独立版的layer无需执行这一句

            layer.open({
                type: 1,
                skin: 'layui-layer-demo', //样式类名
                title: ['报损单详细', 'font-size:18px'],
                area: ['850px', '400px'],
                shade: 0,
                content: $('#hideID3'), //这里content是一个DOM，注意：最好该元素要存放在body最外层，否则可能被其它的相对元素所影响
                btn: ['按钮', '退出'],
                btn1: function (index, layero) {
                    // 按钮1的逻辑
                },
                btn2: function (index, layero) {
                    // 按钮2的逻辑
                },
                cancel: function () {
                    // 右上角关闭事件的逻辑
                }

            });

        });
        $.ajax({
            type: "post",
            url: "/XBY/YiKucha",
            data: "{id:'" + rid + "'}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                $.each(result, function (index, data) {
                    $(".rukdh").text(data.MovementID);
                    $(".bsr").text(data.EmployeeID);
                    $(".chuangjiantime").text(ConvertDate(data.CreationTime));

                    if (data.State == 2) {
                        $(".dangqianhzt").text("待审核");
                    }
                    if (data.State == 1) {
                        $(".dangqianhzt").text("审核通过");
                    }
                    if (data.State == 0) {
                        $(".dangqianhzt").text("审核失败");
                    }
                    $(".shenhebeizhu").text(data.StateText);//审核备注


                    $.each(data.xiangbiao, function (index, data1) {

                        $("#xiangqingbiae").append("<tr><td>" + data1.cptiaoma + "</td><td>" + data1.cptiaoma + "</td><td>" + data1.productName + "</td><td>" + data1.Batch + " </td><td>" + data1.MovementNumber + "</td><td>" + fanhuicangk(data1.WarehouseID) + "</td><td>" + fanhuicangk(data1.WarehouseIDs) + "</td></tr>")
                    })
                });


            },
            error: function (ex) {
                alert(ex.responseText);
            }
        });
    }


    //审核页面显示
    function yikushnehe(rid) {

        $("#xiangqingbiae2 tr").remove();
        layui.use('layer', function () { //独立版的layer无需执行这一句
            var $ = layui.jquery, layer = layui.layer; //独立版的layer无需执行这一句

            layer.open({
                type: 1,
                skin: 'layui-layer-demo', //样式类名
                title: ['报损单详细', 'font-size:18px'],
                area: ['850px', '400px'],
                shade: 0,
                content: $('#hideshenhe'), //这里content是一个DOM，注意：最好该元素要存放在body最外层，否则可能被其它的相对元素所影响
               
                cancel: function () {
                    // 右上角关闭事件的逻辑
                }

            });

        });
        $.ajax({
            type: "post",
            url: "/XBY/YiKucha",
            data: "{id:'" + rid + "'}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                $.each(result, function (index, data) {
                    $(".rukdh").text(data.MovementID);
                    danh = data.MovementID;
                    $(".bsr").text(data.EmployeeID);
                    $(".chuangjiantime").text(ConvertDate(data.CreationTime));

                    if (data.State == 2) {
                        $(".dangqianhzt").text("待审核");
                    }
                    if (data.State == 1) {
                        $(".dangqianhzt").text("审核通过");
                    }
                    if (data.State == 0) {
                        $(".dangqianhzt").text("审核失败");
                    }
                    $(".shenhebeizhu").text(data.StateText);//审核备注


                    $.each(data.xiangbiao, function (index, data1) {

                        $("#xiangqingbiae2").append("<tr><td>" + data1.cptiaoma + "</td><td>" + data1.cptiaoma + "</td><td>" + data1.productName + "</td><td>" + data1.Batch + " </td><td>" + data1.MovementNumber + "</td><td>" + fanhuicangk(data1.WarehouseID) + "</td><td>" + fanhuicangk(data1.WarehouseIDs) + "</td></tr>")
                    })
                });


            },
            error: function (ex) {
                alert(ex.responseText);
            }
        });
    }

    function YiKuShenHe(state) {
        $.ajax({
            type: "POST",
            url: "/XBY/YiKuShenHe",
            data: "{danhao:" + danh + ",state:" + state + "}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                if (result > 0) {
                    alert("完成审核");
                    location.href = '/XBY/YiKuGuanli';
                }
            },
            error: function (ex) {
                alert("Error:" + ex.responseText);

            }
        });
    }


    function fanhuicangk(id) {
        if (id == 1) {
            return "成品库位";
        }
        if (id == 2) {
            return "报损库位";
        }
        if (id == 3) {
            return "待出库位";
        }
        if (id == 4) {
            return "待检库位";
        }
        if (id == 5) {
            return "待入库位";
        }
    }


    //跳转到新增移库单号
    function TiaoADD() {
        location.href = '/XBY/YiKuGuanliAdd'
    }



    function Suoyou() {
        layui.use(['laypage', 'layer'], function () {
            var laypage = layui.laypage
                , layer = layui.layer;

            //完整功能
            laypage.render({
                elem: 'pageDome'
                , count: rowss
                , limit: 10
                , layout: ['count', 'prev', 'page', 'next', 'limit', 'refresh', 'skip']
                , jump: function (obj) {
                    pageIndex = obj.curr;
                    pageSize = obj.limit;
                    SuoyouList();
                }
            });
        });
    }

    function SuoyouList() {
        $.ajax({
            type: "POST",
            url: "/XBY/SuoYouYiKuList",
            data: "{PageSize:" + pageSize + ",PageIndex:" + pageIndex + "}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                $("#tt tr").remove();
                rowss = result.PageCount;
                $.each(result.DataList, function (index, data) {
                    $("#tt").append("<tr><td><input type='checkbox' id='" + data.MovementID + "'/></td><td>" + data.MovementID + "</td><td>" + data.MovementType + "</td><td>" + data.Associatednumber + "</td><td>" + data.MovementCount + "</td><td>" + data.name + "</td><td>" + ZTString(data.State) + "</td><td>" + ConvertDate(data.CreationTime) + "</td><td><i class='layui-icon layui-icon-edit' title='编辑'></i> <i class='layui-icon layui-icon-file-b' title='详情' onclick='show3(" + data.MovementID + ");'></i>   <i class='layui-icon layui-icon-delete' title='删除' onclick='ShanChuYiKu(" + data.MovementID + ")'></i>  <i class='layui-icon layui-icon-vercode' title='审核' id='ck" + data.MovementID + "' onclick='yikushnehe(" + data.MovementID + ")' ></i>      </td></tr>");
                    if (data.State != 2) {
                        document.getElementById("ck" + data.MovementID + "").style.display = "none";
                    }
                });
            },
            error: function (ex) {
                alert("Error:" + ex.responseText);

            }
        });
    }


    function rukuList(dss) {
        $.ajax({
            type: "POST",
            url: "/XBY/YiKuList",
            data: "{PageIndex:" + pageIndex + ",pageSize:" + pageSize + ",State:" + dss + "}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                $("#tt tr").remove();
                rowss = result.PageCount;
                $.each(result.DataList, function (index, data) {
                    $("#tt").append("<tr><td><input type='checkbox' id='" + data.MovementID + "'/></td><td>" + data.MovementID + "</td><td>" + data.MovementType + "</td><td>" + data.Associatednumber + "</td><td>" + data.MovementCount + "</td><td>" + data.name + "</td><td>" + ZTString(data.State) + "</td><td>" + ConvertDate(data.CreationTime) + "</td><td><i class='layui-icon layui-icon-edit' title='编辑'></i> <i class='layui-icon layui-icon-file-b' title='详情' onclick='show3(" + data.MovementID + ");'></i>   <i class='layui-icon layui-icon-delete' title='删除' onclick='ShanChuYiKu(" + data.MovementID + ")'></i>    <i class='layui-icon layui-icon-vercode' title='审核' id='ck" + data.MovementID + "' onclick='yikushnehe(" + data.MovementID + ")'></i>      </td></tr>");
                    if (data.State != 2) {
                        document.getElementById("ck" + data.MovementID + "").style.display = "none";
                    }
                });
            },
            error: function (ex) {
                alert("Error:" + ex.responseText);

            }
        });
    }

    function MoHuYiKuList() {
        $.ajax({
            type: "POST",
            url: "/XBY/MoHuYiKuList",
            data: "{PageSize:" + pageSize + ",PageIndex:" + pageIndex + ",Danhao:'" + $("#danhaoh").val() + "',time1:'" + $("#time1").val() + "',time2:'" + $("#time2").val() + "'}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                $("#tt tr").remove();
                rowss = result.PageCount;
                $.each(result.DataList, function (index, data) {
                    $("#tt").append("<tr><td><input type='checkbox' id='" + data.MovementID + "'/></td><td>" + data.MovementID + "</td><td>" + data.MovementType + "</td><td>" + data.Associatednumber + "</td><td>" + data.MovementCount + "</td><td>" + data.name + "</td><td>" + ZTString(data.State) + "</td><td>" + ConvertDate(data.CreationTime) + "</td><td><i class='layui-icon layui-icon-edit' title='编辑'></i> <i class='layui-icon layui-icon-file-b' title='详情' onclick='show3(" + data.MovementID + ");'></i>   <i class='layui-icon layui-icon-delete' title='删除' onclick='ShanChuYiKu(" + data.MovementID + ")'></i>    <i class='layui-icon layui-icon-vercode' title='审核' id='ck" + data.MovementID + "' onclick='yikushnehe(" + data.MovementID + ")'></i>      </td></tr>");
                    if (data.State != 2) {
                        document.getElementById("ck" + data.MovementID + "").style.display = "none";
                    }
                });
            },
            error: function (ex) {
                alert("Error:" + ex.responseText);

            }
        });
    }

    function ZTString(id) {
        if (id == 2) {
            return "等待审核";
        } else if (id == 1) {
            return "审核成功";
        }
        else if (id == 0) {
            return "审核失败";
        }
    }

    //删除移库单
    function ShanChuYiKu(id) {
        //$("#" + id + "").prop("checked", true);

        //判断按钮是否选中
        if ($("#" + id + "").is(":checked") == true) {
            $.ajax({
                type: "POST",
                url: "/XBY/ShanChuYiKu",
                data: "{id:'" + id + "'}",
                dataType: "json",
                contentType: "application/json",
                success: function (result) {
                    if (result > 0) {
                        alert("删除成功");
                        SuoyouList();//重新加载全部数据
                    }
                },
                error: function (ex) {
                    alert("Error:" + ex.responseText);

                }
            });
        } else {
            alert("未选择数据！");
        }

    }


    function ConvertDate(date) {
        var time = new Date(parseInt(date.substr(6)));
        return time.toLocaleDateString();
    }
</script>
