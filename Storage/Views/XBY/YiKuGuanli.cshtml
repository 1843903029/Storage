<div id="hideshenhe" style="display:none">
    <div>
        <table class="table table-bordered">
            <tr>
                <td>移库单号</td>
                <td class="rukdh"></td>
                <td>移库人</td>
                <td class="bsr"></td>
                <td>创建时间</td>
                <td class="chuangjiantime"></td>
            </tr>
            <tr>
                <td>当前状态</td>
                <td class="dangqianhzt" colspan="5"></td>
            </tr>
            <tr>
                <td>报损描述</td>
                <td class="rukgldd" colspan="5"></td>
            </tr>
            <tr>
                <td>审核备注</td>
                <td class="shenhebeizhu" colspan="5"></td>
            </tr>
        </table>

