<script>
    var pageIndex = 1;
    var pageSize = 5;
    var pageCount = 0;
    var rowss = 0;
    var info = [];
    $(function () {

        //    票种名称name 原价pre_price 现价price 张数total
        $("#baocun").click(function () {
            // $(document).ready(function () {
            var num = $("#tb1 tr").length;
            var info = [];
            for (var i = 0; i < num; i++) {
                var obj = {};
                obj.productID = $("#tb1 tr").eq(i).children("td").eq(0).text()
                obj.Price = $("#tb1 tr").eq(i).children("td").eq(4).text();
                obj.StorageNumber = $("#tb1 tr").eq(i).children("td").eq(5).children("input").val();
                obj.Summoney = $("#tb1 tr").eq(i).children("td").eq(5).children("input").val() * $("#tb1 tr").eq(i).children("td").eq(4).text();
                alert($("#tb1 tr").eq(i).children("td").eq(6).text());
                //$("#tb1 tr").eq(i).children("td").eq(7).text()
                obj.WarehouseID = 1;
                obj.StorageIDS = 154777;
                console.log(obj)
                info.push(obj);
            }
            console.log(info)
            // })
        });



        rukuList();

        layui.use(['laypage', 'layer'], function () {
            var laypage = layui.laypage
                , layer = layui.layer;

            //完整功能
            laypage.render({
                elem: 'pageDome'
                , count: rowss
                , limit: 5
                , layout: ['count', 'prev', 'page', 'next', 'limit', 'refresh', 'skip']
                , jump: function (obj) {
                    pageIndex = obj.curr;
                    pageSize = obj.limit;
                    rukuList();
                }
            });
        });

    })

    function www(ff) {
        var num = $("#tb1 tr").length;
        for (var i = 0; i < num; i++) {
            alert(ff);
            $("#" + ff + "").text($("#tb1 tr").eq(i).children("td").eq(5).children("input").val() * $("#tb1 tr").eq(i).children("td").eq(4).text());
        }
    }


    function ZhaoID(jj) {
        $.ajax({
            type: "POST",
            url: "/XBY/CpGlfenye",
            data: "{text:" + jj + "}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                $.each(result, function (index, data) {
                    cpid = data.CpID;
                    return cpid;
                });
            },
            error: function (ex) {
                alert("Error:" + ex.responseText);

            }
        });
    }
    function ZhaoIDkuwei(ii) {
        $.ajax({
            type: "POST",
            url: "/XBY/textkuw",
            data: "{text:'" + ii + "'}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                $.each(result, function (index, data) {
                    return data.kwID;
                });
            },
            error: function (ex) {
                alert("Error:" + ex.responseText);

            }
        });
    }




    function rukuList() {
        $.ajax({
            type: "POST",
            url: "/LLQ/GetCpGlAll",
            data: "{PageIndex:" + pageIndex + ",PageSize:" + pageSize + "}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                $("#tb2 tr").remove();
                rowss = result.PageCount;
                $.each(result.DataList, function (index, data) {
                    $("#tb2").append("<tr onclick='SelectChanPin(" + data.CpID + ")'><td>" + data.CpID + "</td><td>" + data.CpXsName + "</td><td>" + data.CpPrice + "</td><td>" + data.CpShuLiang + "</td><td>" + data.KwName + "</td><td><i class='layui-icon layui-icon-edit' title='编辑'></i>  <i class='layui-icon layui-icon-delete' title='删除'></i>        </td></tr>");

                });
            },
            error: function (ex) {
                alert("Error:" + ex.responseText);

            }
        });
    }


    function SelectChanPin(id) {
        $.ajax({
            type: "POST",
            url: "/XBY/IDCanPin",
            data: "{id:" + id + "}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                $.each(result, function (index, data) {
                    $("#tb1").append("<tr><td>" + data.CpID + "</td><td>" + data.CpXsName + "</td><td>" + data.Cpbh + "</td><td>" + data.Specification + "</td><td>" + data.CpPrice + "</td><td><input id='RukuShu' type='text' onchange='www(" + data.Cpbh + ")' /></td><td id='" + data.Cpbh + "'></td><td>" + data.KwName + "</td><td><i class='layui-icon layui-icon-edit' title='编辑'></i>  <i class='layui-icon layui-icon-delete' title='删除'></i>        </td></tr>");

                });
            },
            error: function (ex) {
                alert("Error:" + ex.responseText);

            }
        });
    }


    function ADD() {
        $.ajax({
            type: "POST",
            url: "/XBY/ADDRuku",
            data: "{zhu:{StorageID:'"+154777+"',StorageType:'" + $("#rukuleixing1").val() + "',SupplierID:'" + 1 + "',EmployeeID:'" + 1 + "'},xiang:'" + info + "'}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                if (result > 0) {
                    alert("新增成功");
                }
            },
            error: function (ex) {
                alert("Error:" + ex.responseText);

            }
        });
    }


    function ConvertDate(date) {
        var time = new Date(parseInt(date.substr(6)));
        return time.toLocaleDateString();
    }
</script>
