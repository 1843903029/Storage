<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/layui/layui.js"></script>
<script>
    var pageIndex = 1;
    var pageSize = 5;
    var pageCount = 0;
    var rowss = 0;
    $(function () {
        rukuList();
        KeHuList();//查询客户信息绑定到下拉框
        var addtime = new Date();
        $("#FaHuoTime").val(addtime.toLocaleDateString());//赋值当前日期到页面

        suijidanhao();//随机单号生成

        layui.use(['laypage', 'layer'], function () {
            var laypage = layui.laypage
                , layer = layui.layer;

            //完整功能
            laypage.render({
                elem: 'pageDome'
                , count: rowss
                , limit: 5
                , layout: ['count', 'prev', 'page', 'next', 'limit', 'refresh', 'skip']
                , jump: function (obj) {
                    pageIndex = obj.curr;
                    pageSize = obj.limit;
                    rukuList();
                }
            });
        });

    })




    function rukuList() {
        $.ajax({
            type: "POST",
            url: "/LLQ/GetCpGlAll",
            data: "{PageIndex:" + pageIndex + ",PageSize:" + pageSize + "}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                $("#tb2 tr").remove();
                rowss = result.PageCount;
                $.each(result.DataList, function (index, data) {
                    $("#tb2").append("<tr onclick='SelectChanPin(" + data.CpID + ")'><td>" + data.CpID + "</td><td>" + data.CpXsName + "</td><td>" + data.CpPrice + "</td><td>" + data.KwName + "</td><td>" + data.CpShuLiang + "</td></tr>");
                });
            },
            error: function (ex) {
                alert("Error:" + ex.responseText);

            }
        });
    }


    function www(ff) {
        var num = $("#tb1 tr").length;
        for (var i = 0; i < num; i++) {
            if ($("#tb1 tr").eq(i).children("td").eq(8).children("input").val() < $("#tb1 tr").eq(i).children("td").eq(9).text()) {
                $("#" + ff + "").text($("#tb1 tr").eq(i).children("td").eq(8).children("input").val() * $("#tb1 tr").eq(i).children("td").eq(5).text());
            } else {
                alert("库存没这么多！");
                $("#tb1 tr").eq(i).children("td").eq(8).children("input").val("1");
                return;
            }


        }
    }

    function SelectChanPin(id) {
        $.ajax({
            type: "POST",
            url: "/XBY/IDCanPin",
            data: "{id:" + id + "}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                $.each(result, function (index, data) {
                    $("#tb1").append("<tr><td>" + data.CpID + "</td><td>" + data.CpXsName + "</td><td>" + data.Cpbh + "</td><td>" + data.CpID + "</td><td></td><td>" + data.CpPrice + "</td><td id='" + data.Cpbh + "'></td><td>" + data.Specification + "</td><td><input id='RukuShu' type='text' onchange='www(" + data.Cpbh + ")' /></td><td>" + data.CpShuLiang + "</td><td><i class='layui-icon layui-icon-edit' title='编辑'></i>  <i class='layui-icon layui-icon-delete' title='删除'></i>        </td></tr>");

                });
            },
            error: function (ex) {
                alert("Error:" + ex.responseText);

            }
        });
    }


    function KeHuList() {
        $.ajax({
            type: "POST",
            url: "/XBY/KeHuList",
            data: "{}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                $.each(result, function (index, data) {
                    $("#kehulist").append("<option value='" + data.ID + "'>" + data.KhName + "</option>");
                });
            },
            error: function (ex) {
                alert("Error:" + ex.responseText);

            }
        });
    }

    function IdKh() {
        //alert(document.getElementById("gysname").value);
        if (document.getElementById("kehulist").value != "请选择") {
            $.ajax({
                type: "POST",
                url: "/XBY/KeHuID",
                data: "{id:'" + document.getElementById("kehulist").value + "'}",
                dataType: "json",
                contentType: "application/json",
                success: function (result) {
                    $.each(result, function (index, data) {
                        $("#Khbh").val(data.KhID);
                        $("#Khdizhi option").remove();
                        $("#Khdizhi").append("<option value='请选择'>请选择</option>");
                        $("#Khsdianhua").val(null);
                        $.each(data.dizhi, function (index, datadz) {
                            $("#Khdizhi").append("<option value='" + datadz.ID + "'>" + datadz.CustomerAddressName + "</option>");
                        })
                    });
                },
                error: function (ex) {
                    alert("Error:" + ex.responseText);

                }
            });
        } else {
            $("#Khbh").val(null);
            $("#Khdizhi option").remove();
            $("#Khdizhi").append("<option value='请选择'>请选择</option>");
            $("#Khsdianhua").val(null);
        }
    }

    function idDZ() {
        //alert(document.getElementById("Khdizhi").value);
        if (document.getElementById("Khdizhi").value != "请选择") {
            $.ajax({
                type: "POST",
                url: "/XBY/IdDz",
                data: "{id:'" + document.getElementById("Khdizhi").value + "'}",
                dataType: "json",
                contentType: "application/json",
                success: function (result) {
                    $.each(result, function (index, data) {

                        $("#Khsdianhua").val(data.phone);

                    });
                },
                error: function (ex) {
                    alert("Error:" + ex.responseText);

                }
            });
        } else {
            $("#Khsdianhua").val(null);
        }
    }


    //   根据当前时间和随机数生成流水号
    function suijidanhao() {
        var now = new Date()
        var month = now.getMonth() + 1
        var day = now.getDate()
        var hour = now.getHours()
        var minutes = now.getMinutes()
        var seconds = now.getSeconds()
        //month = now.setTimeDateFmt(month)
        //hour = now.setTimeDateFmt(hour)
        //minutes = now.setTimeDateFmt(minutes)
        //seconds = this.setTimeDateFmt(seconds)
        danhapsuiji = now.getFullYear().toString() + month.toString() + day + hour + minutes + seconds + (Math.round(Math.random() * 89 + 100)).toString()
        $("#ChuKuRandom").val(danhapsuiji);
    }


    function ConvertDate(date) {
        var time = new Date(parseInt(date.substr(6)));
        return time.toLocaleDateString();
    }
</script>
