            <table style="width:100%;" class="table table-bordered">
                <thead>
                    <tr>
                        <td><input type="checkbox" id="check1" onclick="quanxuan('checkbox', 'reversecheck')" /></td>
                        <td>供应商编号</td>
                        <td>供应商类型</td>
                        <td>供应商名称</td>
                        <td>电话</td>
                        <td>Email</td>
                        <td>传真</td>
                        <td>联系人</td>
                        <td>地址</td>
                        <td>描述</td>
